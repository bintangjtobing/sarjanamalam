{
  "name": "luketowers/purifier",
  "type": "package",
  "description": "Laravel 5 HtmlPurifier Package",
  "keywords": ["laravel5 HtmlPurifier", "laravel5 Purifier", "laravel5 Security", "HtmlPurifier", "Purifier", "security", "xss"],
  "homepage": "https://github.com/LukeTowers/Purifier",
  "license": "MIT",
  "authors": [
    {
      "name": "Muharrem ERÄ°N",
      "email": "me@mewebstudio.com",
      "homepage": "https://github.com/mewebstudio",
      "role": "Original Author"
    },
    {
      "name": "Luke Towers",
      "email": "laravel.purifier@luketowers.cs",
      "homepage": "https://luketowers.ca/",
      "role": "Maintainer"
    }
  ],
  "require": {
    "php": ">=5.5.9",
    "illuminate/config": "5.1.*|5.2.*|5.3.*|5.4.*|5.5.*|5.6.*|5.7.*|5.8.*",
    "illuminate/support": "5.1.*|5.2.*|5.3.*|5.4.*|5.5.*|5.6.*|5.7.*|5.8.*",
    "illuminate/filesystem": "5.1.*|5.2.*|5.3.*|5.4.*|5.5.*|5.6.*|5.7.*|5.8.*",
    "ezyang/htmlpurifier": "4.8.*"
  },
  "require-dev": {
    "phpunit/phpunit": "^4.8|^5.0|^7.0",
    "mockery/mockery": "0.9.*",
    "graham-campbell/testbench": "^5.0",
    "scrutinizer/ocular": "^1.3"
  },
  "suggest": {
    "laravel/framework": "To test the Laravel bindings",
    "laravel/lumen-framework": "To test the Lumen bindings"
  },
  "autoload": {
    "psr-4": {
      "LukeTowers\\Purifier\\": "src/"
    },
    "files": [
      "src/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "LukeTowers\\Tests\\Purifier\\": "tests/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
